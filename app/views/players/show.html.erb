<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>Bridge Alias:</strong>
  <%= @player.alias %>
</p>

<%= link_to 'Back', players_path %>
<hr>

<h3>Matches</h3>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Score</th>
      <th>N-S</th>
      <th>N-S</th>
      <th>E-W</th>
      <th>E-W</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date.strftime('%d/%m/%y') %></td>
        <td><%= match.score %></td>
        <% (0..3).each do |i| %>
          <td><%= match.players[i].try(:name) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
